@model IEnumerable<ProjektSemestralny.Models.Survey>

@{
    ViewData["Title"] = "Index";
}

<h1>Questionnaires:</h1>

<p>
    <input type="button" onclick="location.href='@Url.Action("Create", "Surveys")'" value="Create" class="btn btn-info btn-lg" />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-light btn-sm">Edit</button></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-light btn-sm">Details</button></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-light btn-sm">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
